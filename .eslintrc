{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "tabWidth": 2,
      "semi": false,
      "bracketSpacing": true
    }],
    "eqeqeq": ["error", "always"],
    "no-trailing-spaces": ["error", { "skipBlankLines": false,"ignoreComments": true }],
    "no-var": "error",
  }
}